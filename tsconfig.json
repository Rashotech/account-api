{
  "compilerOptions": {                        
    "target": "es6",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,      
    "typeRoots": ["./node_modules/@types", "./src/types"]           
  },
  "exclude":[
    "node_modules/"
  ]
}